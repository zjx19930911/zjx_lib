<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cpic.team.basetools.view.TaylorViewPager
        android:id="@+id/photoview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageButton
        android:id="@+id/photoview_ivdel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="50dp"
        android:layout_marginRight="18dp"
        android:background="@mipmap/shanchutupian"
        android:padding="@dimen/middle_space" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/small_space"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/photoview_tvseclect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/content_tv_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/color_white"
            android:textSize="@dimen/content_tv_size" />

        <TextView
            android:id="@+id/photoview_tvall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/content_tv_size" />


    </LinearLayout>


</FrameLayout>
